{
  "manifest_version": 3,
  "name": "Claude.ai Japanese Input Helper",
  "version": "1.0.0",
  "description": "Prevents accidental submission during Japanese input conversion in Claude.ai",
  "author": "Hiroki Naito",
  "homepage_url": "https://github.com/hirokieric/claude-japanese-input-helper",
  "permissions": ["storage"],
  "host_permissions": ["https://claude.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
